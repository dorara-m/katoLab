doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')

    block title
      title Faculties
    
    link(rel='stylesheet', href='../../styles/pages/faculties-item.css')
  body
    .l-wrapper
      header.l-header
        .l-header__title.u-show
          h1: a(href="../../index.html") KATO LAB.
          p 心理とスポーツとIT研究室
        nav.l-header__menu: ul
          include data/_pages
          each item in pages
            li: h2
              block menuLink
                a(href=`../../${item.link}` class=item.name)=item.name
      main.main
        img(src='../../images/apple-white.png').bgImg.u-show
        h2.main__title <span>F</span>aculties
        .main__body
          include data/_faculties
          block teacher
            - var teacher = faculties[0];
          .main__section__top
            img(src=`../../images/${teacher.image}`)
            h3=teacher.name
                span=teacher.position
          .main__section
            h3 専攻
            p #{teacher.field}
            h3 連絡先
            p: a.c-link(href=`mailto:${teacher.address}`)=teacher.address
            h3 自己紹介文
            p=teacher.introduction
            block add
      
      footer.l-footer
        a(href='../index.html'): img.l-footer__img(src='../../images/apple-white.png')
        .copyright: p Created by MM