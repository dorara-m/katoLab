doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')
    title Faculties
    meta(name='description', content='Faculties/加藤研究室')
    
    block styles
      link(rel='stylesheet', href='../../styles/pages/faculties.css')
  body
    .wrapper
      section.left
        a(href='../../index.html').left__title
          h1 KATO LAB.
          p 加藤研究室
          ul.left__menu
            include ../../includes/_pages
            each item in pages
              li 
                h2
                  a(href=`../../${item.link}`)=item.name
      section.right
        img.right__backImg(src='../../images/apple-white.png')
        article.right__article
          h1.right__article__pageTitle <span>F</span>aculties
          .right__article__body
            block content
              include ../../includes/_faculties
              each val in faculties
                a(href=val.link).right__article__body__section
                  img.right__article__body__section__icon(src=`../../images/${val.image}`)
                  h2.right__article__body__section__name=val.name