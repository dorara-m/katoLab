extends ../layout/_pages

block title
  title Activity
  meta(name='description', content='Activity/加藤研究室')

block styles
  link(rel='stylesheet', href='/assets/styles/app.css')

block content
  h1.main__title
    span A
    | ctivity
  .p-activity
    .main__section
      p 当研究室における学会活動、イベントなどを掲示しています。
    include ../data/_activity
