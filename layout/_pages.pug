doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')

    block title
      title page-title
    
    block styles
      link(rel='stylesheet', href='/assets/styles/app.css')
  body
    .l-wrapper
      header.l-header
        .l-header__title.u-hideSP
          h1: a(href="/") KATO LAB.
          p 心理とスポーツとIT研究室
        ul.l-header__menu#js-menu
          include ../data/_pages
          each item in pages
            li
              a(href=`/${item.link}/` class=item.link)=item.name
      main.main
        img.bgImg.u-hideSP(src='/assets/images/apple-white.png')
        block content
      footer.u-hidePC.l-footer
        .l-footer__inner
          a(href='/'): img.l-footer__img(src='/assets/images/apple-black.png')
          .copyright: p Created by MM
      script(src="https://code.jquery.com/jquery-3.3.1.min.js",integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=", crossorigin="anonymous")
      script(src="/assets/scripts/app.js")